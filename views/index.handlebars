<h1 class="text-center">Eat Da Burger!</h1>

<div class="container-fluid">
<div class="row text-center">
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-6">

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row text-center">
<h2>Add a Burger</h2>
<form id="create-form">

    <div class="form">
        <label for="burgerName"></label>
        <input type="text" id="burgerName" name="burger-input">
    </div>

    <button type="submit">Submit</button>
</form>
</div>
</div>