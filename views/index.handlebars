<h1>Eat Da Burger!</h1>

<h2>Burger Added</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burger Devoured</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form">
    <label for="burgerName"></label>
    <input type="text" id="burgerName" name="burger-input">
  </div>

  <button type="submit">Submit</button>
</form>